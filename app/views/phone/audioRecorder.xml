<Alloy>
  <Window title="Audio Recorder" onOpen="onOpen" onClose="onClose">
    <View layout="vertical">
      <Button class="mt-8" id="startRecordingButton" title="Start Recording" onClick="startRecording" />
      <Button class="mt-8" id="pauseRecordingButton" title="Pause Recording" onClick="pauseRecording" />
      <Button class="mt-8" id="stopRecordingButton" title="Stop Recording" onClick="stopRecording" />
      <Button class="mt-8" id="playRecordingButton" title="Play Recording" onClick="playRecording" />
    </View>
  </Window>
</Alloy>

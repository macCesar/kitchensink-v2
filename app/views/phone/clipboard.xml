<Alloy>
  <Window title="L('clipboard')" class="vertical">
    <TextField id="copyField" hintText="L('enter_text')" class="w-(80%) border-style-rounded android:hint-type-animated mt-10"/>
    <Button onClick="copyText" class="mr-(10%) mt-2" title="L('copy_text')"/>

    <TextField id="pasteField" hintText="L('paste_here')" class="w-(80%) border-style-rounded android:hint-type-animated editable-false mt-10"/>
    <Button onClick="pasteText" class="mr-(10%) mt-2" title="L('paste_text')"/>
  </Window>
</Alloy>

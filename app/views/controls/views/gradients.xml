<Alloy>
  <Window title="L('gradients')" class="vertical" onPostlayout="updateGradient">
    <View id="gradientView" class="h-1/2 w-screen bg-gray-500" onTouchmove="handleTouchMove"/>

    <View class="vertical">
      <!-- Start Radius -->
      <View class="horizontal clip-disabled mx-5 mt-5">
        <Label class="w-(30%)" id="startRadiusLabel" text="L('start_radius')"/>
        <Slider class="min-(0) max-(100) value-(0) w-screen" id="startRadiusSlider" onChange="updateGradient"/>
      </View>

      <!-- End Radius -->
      <View class="horizontal clip-disabled mx-5 mt-5">
        <Label class="w-(30%)" id="endRadiusLabel" text="L('end_radius')"/>
        <Slider class="min-(0) max-(100) value-(100) w-screen" id="endRadiusSlider" onChange="updateGradient"/>
      </View>

      <!-- Backfill Start -->
      <View class="horizontal clip-disabled mx-5 mt-5">
        <Label text="L('back_fill_start')"/>
        <Switch class="value-(0)" id="startFillSwitch" onChange="updateGradient"/>
      </View>

      <!-- Backfill End -->
      <View class="horizontal clip-disabled mx-5 mt-5">
        <Label text="L('back_fill_end')"/>
        <Switch class="value-(0)" id="endFillSwitch" onChange="updateGradient"/>
        <View class="h-0 w-screen"/>
      </View>

      <View class="horizontal clip-disabled mt-5">
        <!-- Random color -->
        <Button onClick="pickRandomColor" title="L('randomize_colors')"/>

        <!-- Radial / linear -->
        <OptionBar class="index-(0) ml-2" onClick="handleGradientType">
          <Labels>
            <Label>L('radial')</Label>
            <Label>L('linear')</Label>
          </Labels>
        </OptionBar>
      </View>
    </View>
  </Window>
</Alloy>

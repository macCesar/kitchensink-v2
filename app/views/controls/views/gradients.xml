<Alloy>
  <Window title="Gradients" class="vertical" onPostlayout="updateGradient">
    <View id="gradientView" class="h-1/2 w-screen bg-gray-500" onTouchmove="handleTouchMove" />

    <View class="horizontal">
      <!-- Start Radius -->
      <Label class="ml-2 mt-5" id="startRadiusLabel" width="30%">Start Radius:</Label>
      <Slider class="min-(0) max-(100) value-(0) mx-5 mt-5 w-screen" id="startRadiusSlider" width="Ti.UI.FILL" onChange="updateGradient" />

      <!-- End Radius -->
      <Label class="ml-2 mt-5" id="endRadiusLabel" width="30%">End Radius:</Label>
      <Slider class="min-(0) max-(100) value-(0) mx-5 mt-5 w-screen" id="endRadiusSlider" value="100" width="Ti.UI.FILL" onChange="updateGradient" />

      <!-- Backfill Start -->
      <Label class="ml-2 mt-5">Back Fill Start:</Label>
      <Switch class="value-(0) ml-2 mt-5" id="startFillSwitch" onChange="updateGradient" />

      <!-- Backfill End -->
      <Label class="ml-2 mt-5">Back Fill End:</Label>
      <Switch class="value-(0) ml-2 mt-5" id="endFillSwitch" onChange="updateGradient" />
      <View width="Ti.UI.FILL" height="0" />

      <!-- Random color -->
      <Button onClick="pickRandomColor" class="ml-2 mt-5" title="Randomize Colors" />

      <!-- Radial / linear -->
      <OptionBar class="index-(0) ml-2 mt-5" onClick="handleGradientType">
        <Labels>
          <Label>Radial</Label>
          <Label>Linear</Label>
        </Labels>
      </OptionBar>
    </View>
  </Window>
</Alloy>

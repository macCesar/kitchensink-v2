<Alloy>
  <Window id="win" title="L('list_view_multi_select')" class="vertical tab-bar-hidden" theme="Theme.KitchenSink.ToolbarTitleBar" onOpen="onWindowOpen" onPostlayout="onWindowPostLayout" onAndroidback="onAndroidBack">
    <Toolbar platform="android" id="mainToolbar" class="hidden-behavior-gone block"/>

    <Toolbar platform="android" id="editToolbar" class="hidden-behavior-gone hidden"/>

    <ListView id="listView" class="show-selection-check allows-selection-during-editing allows-multiple-selection-during-editing" onItemclick="onItemClicked" onLongpress="onLongPressed" onItemsselected="onItemsSelected"/>

    <Toolbar platform="ios" id="mainToolbar" class="block h-auto"/>

    <Toolbar platform="ios" id="editToolbar" class="hidden h-0">
      <Items>
        <Button id="shareButton" class="system-button-action" onClick="shareSelectedItems"/>
        <Button class="system-button-flexible-space"/>
        <Label id="itemsSelectedLabel" class="w-50 text-center"/>
        <Button class="system-button-flexible-space"/>
        <Button id="deleteButton" class="system-button-trash" onClick="deleteSelectedItems"/>
      </Items>
    </Toolbar>

    <View platform="ios" id="bottomPaddingView" class="bg-(#f7f7f7) mb-0 w-screen"/>
  </Window>
</Alloy>

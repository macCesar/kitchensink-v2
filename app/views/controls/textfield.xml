<Alloy>
  <Window title="Text Field">
    <ScrollView id="textfieldsContainer" class="vertical ios:keyboard-dismiss-mode-interactive" onClick="blurTextfield">
      <Label class="w-75 mt-5 text-center text-sm font-bold" text="Demonstration of multiple keyboard types" />

      <!-- Different textfields based on different keyboard types. There are more -->
      <!-- that can be found in the docs https://titaniumsdk.com/api/titanium/ui/textfield.html -->
      <TextField id="regularTextfield" hintText="Regular TextField" class="keyboard-type textlabel" onChange="textFieldValueChanged" onFocus="textFieldFocussed" onBlur="textFieldBlurred" />
      <TextField id="phoneTextfield" hintText="Phone TextField" class="keyboard-type-phone-pad textlabel" onChange="textFieldValueChanged" onFocus="textFieldFocussed" onBlur="textFieldBlurred" />
      <TextField id="emailTextfield" hintText="Email TextField" class="keyboard-type-email autocorrect autocapitalization-text-none autofill-type-email textlabel" onChange="textFieldValueChanged" onFocus="textFieldFocussed" onBlur="textFieldBlurred" />
      <TextField id="passwordTextfield" hintText="Type your password" class="autofill-type-password password-mask textlabel" onChange="textFieldValueChanged" onFocus="textFieldFocussed" onBlur="textFieldBlurred" />
      <TextField id="urlTextfield" hintText="URL TextField" class="keyboard-type-url textlabel" onChange="textFieldValueChanged" onFocus="textFieldFocussed" onBlur="textFieldBlurred" />
      <TextField id="numberTextfield" hintText="Number TextField" class="keyboard-type-number-pad textlabel" onChange="textFieldValueChanged" onFocus="textFieldFocussed" onBlur="textFieldBlurred" />
      <TextField id="numberPunctuationTextfield" hintText="Number punctuation TextField" class="keyboard-type-numbers-punctuation textlabel" onChange="textFieldValueChanged" onFocus="textFieldFocussed" onBlur="textFieldBlurred" />
      <TextField id="decimalTextfield" hintText="Decimal TextField" class="keyboard-type-decimal-pad textlabel" onChange="textFieldValueChanged" onFocus="textFieldFocussed" onBlur="textFieldBlurred" />

      <Label platform="ios" class="w-75 mt-5 text-center text-sm font-bold" text="You can drag down the keyboard when its and view is scrollable. This thanks to keyboardDismissMode property on wrapping ScrollView visible" />
    </ScrollView>
  </Window>
</Alloy>

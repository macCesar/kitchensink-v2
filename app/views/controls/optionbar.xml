<Alloy>
  <Window title="Option Bar">
    <ScrollView class="vertical">
      <Label class="mt-10" text="Text-Only Buttons" />
      <OptionBar class="mt-2" onClick="onTextOptionBarClicked">
        <Labels>
          <Label>One</Label>
          <Label>Two</Label>
          <Label>Three</Label>
        </Labels>
      </OptionBar>

      <Label class="mt-8" text="Image-Only Buttons" />
      <OptionBar class="mt-2" onClick="onImageOptionBarClicked">
        <Labels>
          <Label image="/images/icons/controls.png" />
          <Label image="/images/icons/phone.png" />
          <Label image="/images/icons/mashups.png" />
        </Labels>
      </OptionBar>

      <!-- Only Android supports setting both images and text. -->
      <Label platform="android" class="mt-8" text="Image/Text Buttons" />
      <OptionBar platform="android" class="mt-2" onClick="onImageTextOptionBarClicked">
        <Labels>
          <Label image="/images/icons/controls.png">One</Label>
          <Label image="/images/icons/phone.png">Two</Label>
          <Label image="/images/icons/mashups.png">Three</Label>
        </Labels>
      </OptionBar>

      <!-- Only Android supports vertical layout for OptionBar. -->
      <Label platform="android" class="mt-8" text="Vertical Buttons" />
      <OptionBar platform="android" class="vertical mt-2" onClick="onVerticalOptionBarClicked">
        <Labels>
          <Label image="/images/icons/controls.png">One</Label>
          <Label image="/images/icons/phone.png">Two</Label>
          <Label image="/images/icons/mashups.png">Three</Label>
        </Labels>
      </OptionBar>
    </ScrollView>
  </Window>
</Alloy>

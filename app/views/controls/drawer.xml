<Alloy>
  <Window id="win" title="Drawer" onAndroidback="onAndroidBack" onOpen="onWindowOpen">
    <DrawerLayout platform="android" id="drawerLayout">
      <LeftView>
        <View class="bg-primary-500">
          <Label text="Left" />
        </View>
      </LeftView>

      <CenterView>
        <View>
          <Button id="btn_left" title="Toggle left" onClick="onClickLeft" class="mt-25" />
          <Button id="close" title="Close window" onClick="onClickClose" />
          <Button id="btn_right" title="Toggle right" onClick="onClickRight" class="mb-25" />
        </View>
      </CenterView>

      <RightView>
        <View class="bg-primary-500">
          <Label text="Right" />
        </View>
      </RightView>
    </DrawerLayout>
  </Window>
</Alloy>

<Alloy>
  <Window customToolbar="toolbar" class="theme-titanium">
    <Toolbar title="L('my_menu')" subtitle="L('subtitle')" class="bar-green-500 display-home-as-up home-button-enabled mt-0 w-screen">
      <!-- The Items tag sets the Toolbar.items property. -->
      <Items>
        <Button id="ok" title="L('ok')"/>
        <Button id="cancel" title="L('cancel')"/>
      </Items>
    </Toolbar>

    <!-- The MenuItem's to be mapped to the toolbar -->
    <Menu platform="android">
      <MenuItem id="item1" title="L('settings')" class="show-as-action-never"/>
      <MenuItem id="item2" title="L('search')" class="show-as-action-never"/>
    </Menu>
  </Window>
</Alloy>

<Alloy>
  <Window title="L('button_bar')" class="vertical">
    <Label text="L('text_only_buttons')" class="mt-1/6"/>

    <ButtonBar onClick="onTextButtonBarClicked" class="mt-4">
      <Labels>
        <Label>L('one')</Label>
        <Label>L('two')</Label>
        <Label>L('three')</Label>
      </Labels>
    </ButtonBar>

    <Label text="L('image_only_buttons')" class="mt-10"/>

    <ButtonBar onClick="onImageButtonBarClicked" class="mt-4">
      <Labels>
        <Label image="/images/icons/controls.png"/>
        <Label image="/images/icons/phone.png"/>
        <Label image="/images/icons/mashups.png"/>
      </Labels>
    </ButtonBar>
  </Window>
</Alloy>

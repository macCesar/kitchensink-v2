<Alloy>
  <Window title="L('option_dialog')">
    <Label id="resultLabel" class="mt-8"/>

    <Button title="L('show_option_dialog')" onClick="onShowOptionDialog"/>

    <OptionDialog id="dialog" title="L('available_options')" class="cancel-(0) destructive-(1) preferred-(2)" onClick="onOptionDialogClicked">
      <Options>
        <Option>L('cancel')</Option>
        <Option>L('delete')</Option>
        <Option>L('confirm')</Option>
      </Options>
    </OptionDialog>
  </Window>
</Alloy>

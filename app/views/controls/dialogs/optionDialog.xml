<Alloy>
  <Window title="Option Dialog">
    <Label id="resultLabel" class="mt-8" />

    <Button title="Show Option Dialog" onClick="onShowOptionDialog" />

    <OptionDialog id="dialog" title="Available Options" class="cancel-(0) destructive-(1) preferred-(2)" onClick="onOptionDialogClicked">
      <Options>
        <Option>Cancel</Option>
        <Option>Delete</Option>
        <Option>Confirm</Option>
      </Options>
    </OptionDialog>
  </Window>
</Alloy>

<Alloy>
  <Window title="L('alert_dialog')">
    <Label id="resultLabel" class="mt-8"/>

    <Button title="L('show_alert_dialog')" onClick="onShowAlertDialog"/>

    <AlertDialog id="alert" class="cancel-(0) destructive-(1) preferred-(2)" title="L('logout')" message="L('do_you_really')" onClick="onAlertDialogClicked">
      <ButtonNames>
        <ButtonName>L('cancel')</ButtonName>
        <ButtonName>L('delete')</ButtonName>
        <ButtonName>L('confirm')</ButtonName>
      </ButtonNames>
    </AlertDialog>
  </Window>
</Alloy>

<Alloy>
  <Window title="L('facebook')" id="fbWin">
    <Button id="fbLogin" title="L('login')" class="action-button mt-5 hidden" onClick="login"/>
    <Button id="fbLogout" title="L('logout')" class="action-button mt-5 hidden" onClick="logout"/>
    <Button id="fbShare" title="L('share')" class="action-button mt-20 hidden" onClick="share"/>

    <ImageView id="fbUserImage" class="wh-12 mt-35"/>

    <Label id="fbUserName" class="mt-50"/>
    <Label id="fbFriends" class="mt-55"/>
  </Window>
</Alloy>
